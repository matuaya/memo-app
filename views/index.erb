<ul>
  <% unless @memos.nil? %>
    <% @memos.each do |memo| %>
      <li><a class="memo_link" href="/memos/<%= memo['id'] %>"><%= html_escape(memo["title"]) %></a></li>
    <% end %>
  <% end %>
</ul>
<form class="add-form" method="get" action="/memos/new">
  <input class="button" type="submit" value="追加">
</form>
